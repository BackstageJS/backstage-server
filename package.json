{
  "name": "treehouse",
  "version": "0.0.0",
  "description": "A home for all your branches",
  "repository": "git@github.com:jessepinho/treehouse.git",
  "author": "Jesse Pinho <jesse@jessepinho.com>",
  "license": "MIT",
  "scripts": {
    "start": "ts-node src/app.ts",
    "start:watch": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "ts-node": "^4.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.1",
    "jest": "^22.2.1",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.14.12",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.7.1"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
