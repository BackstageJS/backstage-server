{
  "name": "backstage-server",
  "version": "1.0.0-alpha.2",
  "description": "Simple hosting for multiple versions of your static sites.",
  "repository": "git@github.com:jessepinho/backstage-server.git",
  "author": "Jesse Pinho <jesse@jessepinho.com>",
  "license": "MIT",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc",
    "build:watch": "tsc --watch",
    "prepublishOnly": "tsc",
    "start": "ts-node src/app.ts",
    "start:watch": "nodemon",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "dependencies": {
    "cookie-parser": "^1.4.3",
    "express": "^4.16.2",
    "multer": "^1.3.0",
    "rimraf": "^2.6.2",
    "tar": "^4.3.3",
    "ts-node": "^4.1.0"
  },
  "devDependencies": {
    "@types/cookie-parser": "^1.4.1",
    "@types/express": "^4.11.1",
    "@types/jest": "^22.1.1",
    "@types/multer": "^1.3.6",
    "@types/rimraf": "^2.0.2",
    "@types/tar": "^4.0.0",
    "jest": "^22.2.1",
    "node-mocks-http": "^1.6.6",
    "nodemon": "^1.14.12",
    "ts-jest": "^22.0.3",
    "tslint": "^5.9.1",
    "typescript": "^2.7.2"
  },
  "jest": {
    "transform": {
      "^.+\\.tsx?$": "ts-jest"
    },
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|tsx?)$",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
